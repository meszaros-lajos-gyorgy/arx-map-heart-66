define room {
  floor custom textures [wood]oak-herringbone-parquet.jpg scale:1.5
}

define kitchen {
  floor custom textures [stone]mozaic-tile.jpg
}

define door {
  floor off
}

define door-to-gang {
  floor off
  wall-south off
}

define bathroom {
  floor custom textures [stone]cement.jpg scale:0.5
  wall custom textures [stone]white-wall.jpg
  ceiling custom textures [stone]white-wall.jpg
}

define gang {
  floor custom textures [stone]ceramic-tile.jpg scale:0.25
  wall off
  ceiling off
}

define gangEdgeW {
  floor custom textures [stone]ceramic-tile-edge.jpg scale:0.25
  wall off
  ceiling off
}
define gangEdgeE {
  floor custom textures [stone]ceramic-tile-edge.jpg scale:0.25
  wall off
  ceiling off
