# entry hall
room add 250 350 650 room
cursor save entry-hall

# kitchen
room add 0 0 100 default x++ z-
room add 20 250 150 door x++ z++
cursor save add-prefab-doorstep-ns-1
room add 0 0 100 default x++ z--
room add 550 350 650 kitchen x++ z-

# living room
cursor restore entry-hall
room add 0 0 100 default x-- z-
room add 20 250 150 door x-- z++
cursor save add-prefab-doorstep-ns-2
room add 600 350 550 room x-- z+
cursor save living-room

# bedroom
room add 200 300 20 room z--
room add 600 350 550 room z--

# toilet
cursor restore entry-hall
room add 20 250 150 door x-- z+
cursor save add-prefab-doorstep-ns-3
room add 300 350 150 bathroom x--

# storage
cursor restore entry-hall
room add 0 0 200 default x-- z+
room add 20 250 150 door x-- z--
cursor save add-prefab-doorstep-ns-4
room add 300 350 150 bathroom x--

# "gang"
cursor restore entry-hall
room add 150 300 20 door-to-gang z--
cursor save add-prefab-doorstep-ew-1
room add 50 0 0 default x-- z--

room add 25 0 25 gangCornerNW x- z--
cursor save gang-nw-corner
room add 25 0 900 gangEdgeW z--
cursor save gang-w-edge
room add 25 0 25 gangCornerSW x- z--
room add 200 0 25 gangEdgeS x++
room add 25 0 25 gangCornerSE x++
room add 25 0 75 gangEdgeE z++
cursor save gang-s-e-edge
room add 25 0 25 gangCornerNE z++
cursor restore gang-s-e-edge
room add 125 0 75 gang x--
room add 75 0 75 gang x- z++
room add 25 0 25 gangCornerSW x- z++
cursor save gang-corner-bottom
room add 25 0 550 gangEdgeE x- z++
room add 25 0 25 gangCornerSE z++
room add 50 0 25 gangEdgeS x++
room add 25 0 25 gangCornerSE x++
room add 25 0 50 gangEdgeE z++
room add 75 0 75 gang z- x--

cursor restore gang-corner-bottom
room add 50 0 25 gangEdgeN x++
room add 25 0 25 gangCornerNE x++
room add 25 0 50 gangEdgeE z--
room add 25 0 25 gangCornerSW z--
room add 25 0 25 gangEdgeN x++

cursor restore gang-w-edge
room add 75 0 900 gang x++
cursor restore gang-nw-corner
room add 900 0 25 gangEdgeN x++
room add 825 0 75 gang x+ z--
room add 25 0 75 gangEdgeE x++
cursor save gang-e-edge
room add 25 0 25 gangCornerNE z++
cursor restore gang-e-edge
room add 25 0 25 gangCornerSE z--
room add 725 0 25 gangEdgeS x--
room add 25 0 25 gangCornerNW x--
